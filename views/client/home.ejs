<%- include ('../partials/client-top') %>
<div class="jumbotron d-flex justify-content-center align-items-center md-banner text-white">
  <h3 class="title">Public Information on Waste Management</h3>
</div>

<div class="container">
  <h3 class="mb-3">Recent Waste Management Information</h3>
  <% reports.forEach(m => { %>
    <div class="row py-2 mb-2 bg-white" style="margin-top: 2em; box-shadow: 0px 0px 5px -1px rgb(0 0 0 / 37%);">
      <div class="col-md-3">
        <img src='<%= m.image || "/images/default-image.png" %>' class="img-responsive" alt="" style="max-height: 165px; width: 100%; ">
      </div>
      <div class="col-md-6">
        <h3 class="text-info"><%= m.subject %></h3>
        <h5>Location: <%= m.location %></h5>
        <p class="text-muted" class="small"><b>Report</b>  <%= m.report %></p>
      </div>
      <div class="clearfix"></div>
    </div>
  <% }) %>  
</div>

<%- include ('../partials/client-bottom') %>