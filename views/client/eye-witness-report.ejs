<%- include ('../partials/client-top') %>
<div class="jumbotron d-flex justify-content-center align-items-center md-eyewitness text-white">
  <h3 class="title">Report Any Waste Mismanagement In Your Vicinity</h3>
</div>

<div class="container">
  <h3 class="mb-3">Eyewitness Report</h3>
  <% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= success_msg %></strong> 
    </div>
    <script>
      $(".alert").alert();
    </script>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= error_msg %></strong> 
    </div>
    <script>
      $(".alert").alert();
    </script>
  <% } %>
  <form action="/send-eyewitness-report" method="POST" class="form row" enctype="multipart/form-data">
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Sender's Name</label>
      <input type="text" class="form-control form-control-sm" name="sender_name">
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Sender's Contact</label>
      <input type="text" class="form-control form-control-sm" name="sender_phone">
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Type of Report</label>
      <select class="form-control form-control-sm" name="type_of_report">
        <option value="">-- select type of incident --</option>
        <option>Absense of Waste Disposal Mechanism</option>
        <option>Roadside Refuse Heap</option>
        <option>Illegal Waste Disposal</option>
        <option>Other Waste Disposal Offense</option>
      </select>
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Subject (Heading)</label>
      <input type="text" class="form-control form-control-sm" name="subject">
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Full Report</label>
      <textarea class="form-control form-control-sm" name="body"></textarea>
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Incident Image</label>
      <input type="file" class="form-control form-control-sm" name="image">
    </div>
    <div class="form-group col-12">
      <input class="btn btn-primary" type="submit" value="Submit">
    </div>
  </form>
</div>


<%- include ('../partials/client-bottom') %>