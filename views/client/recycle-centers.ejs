<%- include ('../partials/client-top') %>
<div class="jumbotron d-flex justify-content-center align-items-center md-recycle text-white">
  <h3 class="title">Information on Waste Recycling Agencies</h3>
</div>

<div class="container">
  <h4 class="mb-3 text-center">Available Waste Recycling Centers</h4>
  <% recycle_centers.forEach(m => { %>
    <div class="row py-2 mb-2 bg-white" style="margin-top: 2em; box-shadow: 0px 0px 5px -1px rgb(0 0 0 / 37%);">
      <% /* %>
      <div class="col-md-3">
        <img src="/images/default-image.png" class="img-responsive" alt="" style="max-height: 165px; width: 100%; ">
      </div>
      <% */ %>
      <div class="col-md-6">
        <h3 class="text-success"><%= m.shop_name %></h3>
        <p class="text-muted">Telephone: <%= m.phone %></p>
        <p class="text-muted">Office Address: <%= m.address %></p>
      </div>
      <div class="clearfix"></div>
    </div>
  <% }) %>  
</div>

<%- include ('../partials/client-bottom') %>