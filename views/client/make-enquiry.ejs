<%- include ('../partials/client-top') %>
<div class="jumbotron d-flex justify-content-center align-items-center md-banner text-white">
  <h3 class="title">Send Your Enquiries</h3>
</div>

<div class="container">
  <h3 class="mb-3">Make Enquiry</h3>
  <% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= success_msg %></strong> 
    </div>
    <script>
      $(".alert").alert();
    </script>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <strong><%= error_msg %></strong> 
    </div>
    <script>
      $(".alert").alert();
    </script>
  <% } %>
  <form action="/send-enquiry" method="POST" class="form row">
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Name</label>
      <input type="text" class="form-control form-control-sm" name="sender_name">
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Email</label>
      <input type="text" class="form-control form-control-sm" name="sender_email">
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Mobile Phone</label>
      <input type="text" class="form-control form-control-sm" name="sender_phone">
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Subject</label>
      <input type="text" class="form-control form-control-sm" name="subject">
    </div>
    <div class="form-group col-lg-4 col-md-6">
      <label for="">Comment</label>
      <textarea class="form-control form-control-sm" name="body"></textarea>
    </div>
    <div class="form-group col-12">
      <input class="btn btn-primary" type="submit" value="Submit">
    </div>
  </form>
</div>


<%- include ('../partials/client-bottom') %>