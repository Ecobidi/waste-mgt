<%-include ("partials/top") %>
<div class="row space"> 
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h4 class="page-title">Update Waste Report</h4>
    </div>
  </div> 
</div>

<div class="row space">
<div class="col-12">

<form action='<%= newEntry ? "/admin/reports/new" : "/admin/reports/update" %>' method="POST" enctype="multipart/form-data" class="card">
  <input type="hidden" name="_id" value='<%= report._id %>'>
  <fieldset class="row card-body">
    <div class="form-group col-md-6">
      <label>Subject/Title: <strong class="text-danger">*</strong></label>
      <input type="text" class="form-control" name="subject" value='<%= report.subject %>' />
    </div>
    <div class="form-group col-md-6">
      <label>Location: <strong class="text-danger">*</strong></label>
      <input type="text" class="form-control" name="location" value='<%= report.location %>' />
    </div>
    <div class="form-group col-md-6">
      <label>Detailed Report: <strong class="text-danger">*</strong></label>
      <textarea class="form-control" name="report"><%= report.report %></textarea>
    </div>
    <% if (report.image) { %>
      <div class="col-md-6">
        <p>Existing Featured Image</p>
        <img src='<%= report.image || "/images/dummy-image.jpg" %>' style="height: 100px; width: 100%;" alt="reports situation image">
      </div>
    <% } %>
    <div class="form-group col-md-6">
      <label>Upload Featured Image: <strong class="text-info">*</strong></label>
      <input type="file" class="form-control" name="image" accept=".jpg,.png" />
    </div>
  </fieldset>
  
  <div class="form-group mt-4">
    <button class="btn btn-primary form-control" type="submit">Submit</button>
  </div>
</form>

